<h1>Subcategories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subcategories.each do |subcategory| %>
  <tr>
    <td><%= subcategory.name %></td>
    <td><%= subcategory.category.name %></td>
    <td><%= link_to 'Show', inventory_settings_subcategory_path(subcategory) %></td>
    <td><%= link_to 'Edit', edit_inventory_settings_subcategory_path(subcategory) %></td>
    <td><%= link_to 'Destroy', inventory_settings_subcategory_path(subcategory), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

